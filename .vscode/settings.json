{
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "files.exclude": {
    "**/*.pyc": {
      "when": "$(basename).py"
    },
    "**/__pycache__": true,
    "**/*pytest_cache": true,
  },
  "python.pythonPath": "venv/bin/python",
  "python.linting.pylintPath": "venv/bin/pylint"
}